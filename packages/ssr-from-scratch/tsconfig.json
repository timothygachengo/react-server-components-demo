{
	"compilerOptions": {
		"checkJs": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ESNext",
		"jsx": "react-jsx",
		"noEmit": false,
		"strict": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
	},
	"ts-node": {
		"experimentalResolver": true
	}
}
